# Порт для запуска HTTP сервера
PORT=8080

# Токен Telegram бота (получите у @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# URL для webhook (ваш публичный домен + /webhook)
WEBHOOK_URL=https://yourdomain.com/webhook

# MongoDB настройки
MONGO_URL=mongodb://localhost:27017
MONGO_DATABASE=sueta

# OpenRouter API ключ (для LLM запросов)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# RAG (Retrieval-Augmented Generation) настройки
# Максимальное количество релевантных старых сообщений для включения в контекст
RAG_MAX_RELEVANT_MESSAGES=5

# Количество дней для исключения из поиска релевантных сообщений
# (сообщения за это количество дней уже включены в "недавние")
RAG_RECENT_DAYS_EXCLUDE=3
